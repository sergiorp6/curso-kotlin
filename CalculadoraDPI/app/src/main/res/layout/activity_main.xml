<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="RV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_tv_rv" android:layout_marginTop="104dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp"/>
    <TextView
            android:text="RH"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/main_tv_rh" android:layout_marginTop="64dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" app:layout_constraintTop_toBottomOf="@+id/main_tv_rv"/>
    <TextView
            android:text="Inches"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/main_tv_inches"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/main_tv_rh"/>
    <TextView
            android:text="DPI"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/main_tv_dpi"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/main_tv_inches"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/main_tv_dpi_result"
            android:layout_marginStart="100dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/main_et_inches"
            app:layout_constraintStart_toEndOf="@+id/main_tv_dpi"/>
    <EditText
            android:layout_width="67dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text="1794"
            android:ems="10"
            android:id="@+id/main_et_rv" android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/main_tv_rv"
            android:layout_marginStart="80dp"/>
    <EditText
            android:layout_width="71dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:text="1080"
            android:ems="10"
            android:id="@+id/main_et_rh" android:layout_marginTop="36dp"
            app:layout_constraintStart_toEndOf="@+id/main_tv_rh"
            android:layout_marginStart="72dp" app:layout_constraintTop_toBottomOf="@+id/main_et_rv"/>
    <EditText
            android:layout_width="69dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:text="5"
            android:ems="10"
            android:id="@+id/main_et_inches" android:layout_marginTop="36dp"
            app:layout_constraintStart_toEndOf="@+id/main_tv_inches"
            android:layout_marginStart="56dp" app:layout_constraintTop_toBottomOf="@+id/main_et_rh"/>
    <Button
            android:text="Calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_bt_calcular" android:layout_marginTop="156dp"
            app:layout_constraintTop_toBottomOf="@+id/main_tv_dpi_result" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="144dp"/>
</android.support.constraint.ConstraintLayout>