<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity" android:id="@+id/constraintLayout">

    <TableLayout android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/calc_tlButtons"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginTop="96dp" app:layout_constraintTop_toTopOf="parent"
                 android:layout_marginStart="24dp">
        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/calc_tlButtons_row0">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="49dp"
                    tools:layout_editor_absoluteX="62dp"
                    android:id="@+id/tv_operand1"
                    android:layout_column="0"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="49dp"
                    tools:layout_editor_absoluteX="62dp"
                    android:id="@+id/tv_operation"
                    android:layout_column="1"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="49dp"
                    tools:layout_editor_absoluteX="62dp"
                    android:id="@+id/tv_operand2"
                    android:layout_column="2"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="49dp"
                    tools:layout_editor_absoluteX="62dp"
                    android:id="@+id/tv_result"
                    android:layout_column="3"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/calc_tlButtons_row1">
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/calc_btNumber1"
                    android:layout_column="0">

            </Button>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/calc_btNumber2"
                    android:layout_column="1">

            </Button>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/calc_btNumber3"
                    android:layout_column="2">

            </Button>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/calc_sumar"
                    android:layout_column="3">

            </Button>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/calc_tlButtons_row2">
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:id="@+id/calc_btNumber4"
                    android:layout_column="0">

            </Button>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:id="@+id/calc_btNumber5"
                    android:layout_column="1">

            </Button>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/calc_btNumber6"
                    android:layout_column="2">

            </Button>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/calc_restar"
                    android:layout_column="3">

            </Button>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/calc_tlButtons_row3">
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:id="@+id/calc_btNumber7"
                    android:layout_column="0">

            </Button>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:id="@+id/calc_btNumber8"
                    android:layout_column="1">

            </Button>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:id="@+id/calc_btNumber9"
                    android:layout_column="2">
            </Button>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:id="@+id/calc_multiplicar"
                    android:layout_column="3">

            </Button>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/calc_tlButtons_row4">

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:id="@+id/calc_btC"
                    android:layout_column="0">

            </Button>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/calc_btNumber0"
                    android:layout_column="1">

            </Button>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:id="@+id/calc_btResult"
                    android:layout_column="2">

            </Button>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:id="@+id/calc_dividir"
                    android:layout_column="3">

            </Button>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>